<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th><u>Category</u></th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <%= render 'categories', category: category, product: @product %>
        <% end %>
        <tr>
        <td><%= link_to 'Total Products', [:admin, :products] %></td>
        <td><%= @products.count %></td>
        </tr>
      </tbody>
    </table>

  </div>

</section> 